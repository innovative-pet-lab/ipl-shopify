<style>
  .inline-media-section {
    margin: 0 5% 40px 5%;
  }

  .inline-media-heading {
    color: #1c1d31;
    text-align: center;
    font-size: 48px;
    font-weight: 600;
    margin-top: 40px;
    margin-bottom: 40px;
  }

  .overflow-text {
    font-size: 20px;
    line-height: 26px;
    color: #333333;
    margin: 10px 0;
  }

  .inline-text {
    font-size: 20px;
    line-height: 26px;
    color: #333333;
    margin: 10px 0;
  }

  .inline-media-thumbnail video {
    width: 100%;
    border-radius: 12px;
  }

  .media-float {
    float: right;
    width: 40%;
    margin-top: 20px;
    margin-left: 30px;
    margin-bottom: 20px;
    position: relative;
  }

  .inline-media-thumbnail {
    position: relative;
  }

  .inline-media-thumbnail img {
    width: 100%;
    border-radius: 12px;
  }

  .overlay-button-border {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(255, 255, 255, 0.7);
    width: 30%;
    height: 50%;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .overlay-button {
    width: 0;
    height: 0;
    border-left: 40px solid rgba(0, 0, 0, 0.5);
    border-top: 24px solid transparent;
    border-bottom: 24px solid transparent;
  }

  @media screen and (min-width: 992px) {
    .inline-media-section {
      margin: 0 7% 40px 7%;
    }
  }

  @media screen and (max-width: 967px) {
    .inline-media-section {
      margin: 0 4% 40px 4%;
    }
  }

  @media screen and (max-width: 767px) {
    .overlay-button {
      border-left: 20px solid rgba(0, 0, 0, 0.5);
      border-top: 12px solid transparent;
      border-bottom: 12px solid transparent;
    }
  }

  @media screen and (max-width: 540px) {
    .inline-media-section {
      margin: 0 6% 40px 6%;
    }

    .inline-media-heading {
      text-align: left;
      font-size: 20px;
      font-weight: 600;
    }

    .overflow-text {
      font-size: 16px;
      line-height: 22px;
    }

    .inline-text {
      font-size: 16px;
      line-height: 22px;
    }

    .media-float {
      width: 100%;
      margin-top: 20px;
      margin-left: 30px;
      margin-bottom: 20px;
    }
  }
</style>

<div style="height: 80px; margin-top: -80px;" id="{{ section.settings.page_section_id }}"></div>
<section class="inline-media-section">
  <h2 class="inline-media-heading">{{ section.settings.title }}</h2>

  {% for block in section.blocks %}
    {% if block.settings.is_above_media %}
      <div class="overflow-text">
        {{ block.settings.content }}
      </div>
    {% endif %}
  {% endfor %}

  <div>
    <div class="media-float">
      <div class="inline-media-thumbnail">
        {% assign mp4_source = '' %}
        {% for source in section.settings.media_video.sources %}
          {% if source.format == 'mp4' %}
            {% assign mp4_source = source.url %}
            {% break %}
          {% endif %}
        {% endfor %}
        {% if mp4_source != '' %}
          <video
            controls
            poster="{{ section.settings.thumbnail | image_url }}"
            width="100%"
            style="border-radius: 12px;">
            <source src="{{ mp4_source }}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        {% else %}
          <p>MP4 format not found.</p>
        {% endif %}
      </div>
    </div>
    {% for block in section.blocks %}
      {% if block.settings.is_above_media == false %}
        <div class="inline-text">
          {{ block.settings.content }}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Media inline text",
  "settings": [
    {
      "type": "video",
      "id": "media_video",
      "label": "Upload Video"
    },
    {
      "type": "text",
      "id": "page_section_id",
      "label": "Define ID that will be used for navigation redirect.",
      "default": "meet-the-team-our-story-section"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title for text with inline media",
      "default": "Our story"
    },
    {
      "type": "image_picker",
      "id": "thumbnail",
      "label": "Media thumbnail image"
    },
    {
      "type": "url",
      "id": "media_url",
      "label": "Link to media url"
    }
  ],
  "blocks": [
    {
      "type": "paragraph",
      "name": "Inline Text Group",
      "settings": [
        {
          "type": "textarea",
          "id": "content",
          "label": "Inline Text Group Member"
        },
        {
          "type": "checkbox",
          "id": "is_above_media",
          "label": "Indicates that this paragraph appears above inline media",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Media inline text"
    }
  ]
}
{% endschema %}
