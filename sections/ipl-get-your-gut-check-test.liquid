<style>
  /* Reset and base styles */
  * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Helvetica Neue', Arial, sans-serif;
  }

  body {
      background-color: #ffffff;
      color: #2d2a3a;
      line-height: 1.6;
  }

  .container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem 1rem;
  }

  /* Header styles */
  .header {
      text-align: center;
      margin-bottom: 3rem;
  }

  .header h1 {
      font-size: 2.8rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      color: #2d2a3a;
  }

  .header p {
      font-size: 1.2rem;
      max-width: 900px;
      margin: 0 auto;
      color: #4a4a4a;
  }

  /* Features grid */
  .features {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 2rem;
      margin-top: 2rem;
  }

  .feature {
      text-align: center;
      flex: 1 1 200px;
      max-width: 250px;
      display: flex;
      flex-direction: column;
      align-items: center;
  }

  .icon-container {
      background-color: #f2f2f2;
      width: 180px;
      height: 180px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.5rem;
  }

  .icon {
      width: 70px;
      height: 70px;
      stroke: #3a3a8c;
      fill: none;
      stroke-width: 2px;
  }

  .feature h3 {
      font-size: 1.2rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: #2d2a3a;
  }

  /* Call to action button (if needed) */
  .cta-button {
      display: inline-block;
      background-color: #3a3a8c;
      color: white;
      padding: 1rem 2rem;
      border-radius: 30px;
      font-weight: 600;
      text-decoration: none;
      margin-top: 2rem;
      transition: background-color 0.3s;
  }

  .cta-button:hover {
      background-color: #2d2a6e;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
      .header h1 {
          font-size: 2.2rem;
      }

      .header p {
          font-size: 1rem;
      }

      .icon-container {
          width: 150px;
          height: 150px;
      }
  }

  @media (max-width: 480px) {
      .features {
          gap: 1.5rem;
      }

      .feature {
          flex: 0 0 100%;
          max-width: 100%;
      }

      .icon-container {
          width: 130px;
          height: 130px;
      }
  }
</style>

