<script>
  // JavaScript to add animation and interaction effects
  document.addEventListener('DOMContentLoaded', function() {
      // Animate features on scroll
      const features = document.querySelectorAll('.feature');
      
      // Simple fade-in animation when page loads
      features.forEach((feature, index) => {
          setTimeout(() => {
              feature.style.opacity = '0';
              feature.style.transition = 'opacity 0.5s ease-in-out';
              
              setTimeout(() => {
                  feature.style.opacity = '1';
              }, 100);
          }, index * 200);
      });
      
      // Optional hover effects for features
      features.forEach(feature => {
          feature.addEventListener('mouseenter', () => {
              const iconContainer = feature.querySelector('.icon-container');
              iconContainer.style.transform = 'scale(1.05)';
              iconContainer.style.transition = 'transform 0.3s ease-in-out';
          });
          
          feature.addEventListener('mouseleave', () => {
              const iconContainer = feature.querySelector('.icon-container');
              iconContainer.style.transform = 'scale(1)';
          });
      });
      
      // Make sure icons are properly sized on different screens
      function adjustIconSize() {
          const windowWidth = window.innerWidth;
          const iconContainers = document.querySelectorAll('.icon-container');
          
          if (windowWidth < 480) {
              iconContainers.forEach(container => {
                  container.style.width = '130px';
                  container.style.height = '130px';
              });
          } else if (windowWidth < 768) {
              iconContainers.forEach(container => {
                  container.style.width = '150px';
                  container.style.height = '150px';
              });
          } else {
              iconContainers.forEach(container => {
                  container.style.width = '180px';
                  container.style.height = '180px';
              });
          }
      }
      
      // Call once on load and add resize listener
      adjustIconSize();
      window.addEventListener('resize', adjustIconSize);
  });
</script>
