<style>
  .awards-section {
    margin: 0 40px 40px 40px;
  }

  .awards-heading {
    text-align: center;
    font-size: 32px;
    margin: 40px auto;
    font-weight: bold;
  }

  .cards-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 0;
    width: 100%;
    height: auto;
  }

  .award-card {
    display: flex;
    flex-direction: column;
  }

  .award-photo {
    width: 100%;
    height: 35%;
    object-fit: contain;
  }

  .award-description {
    margin-top: 20px;
    font-size: 14px;
    line-height: 1.6;
    color: #333;
    text-align: center;
  }
</style>

<section class="awards-section">
  <h2 class="awards-heading">{{ section.settings.multi_column_awards_title }}</h2>

  <div class="cards-container">
    {% for block in section.blocks %}
      <div class="award-card col-sm-3">
        <img
          class="award-photo"
          src="{{ block.settings.photo | image_url }}"
          alt="{{ block.settings.description }}"
        >
        <div class="award-description">
          {{ block.settings.description }}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Multi-column award cards",
  "settings": [
    {
      "type": "text",
      "id": "multi_column_awards_title",
      "label": "Title for multi column award cards"
    }
  ],
  "blocks": [
    {
      "type": "card-awards",
      "name": "Awards",
      "settings": [
        {
          "type": "image_picker",
          "id": "photo",
          "label": "Award thumbnail"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Award description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Multi-column logo cards"
    }
  ]
}
{% endschema %}
