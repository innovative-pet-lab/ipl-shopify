<style>
    .ipl-featured-products {
        background-color: #F0F6F4;
    }

    .ipl-featured-products h1 {
        text-align: left;
    }

    .ipl-featured-products .container {
        max-width: 1440px;
        margin: 0 auto;
        padding-top: 6rem;
        padding-bottom: 6rem;
    }
    
    .flex {
        display: flex;
    }
    
    .hero {
        text-align: left;
        margin-bottom: 3rem;
    }

    .hero h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: #1a1a1a;
        font-weight: 600;
    }

    .hero p {
        font-size: 1.2rem;
        color: #666;
        max-width: 800px;
        line-height: 1.5;
    }

    .swiper {
        width: 100%;
        padding: 1rem;
        margin-bottom: 3rem;
        position: relative;
    }

    .product-card {
        background: white;
        border-radius: 12px;
        transition: transform 0.3s ease;
        height: 100%;
        border: 1px solid #73C7AD;
        overflow: hidden;
    }

    .product-card .product-info {
        padding: 1rem;
        text-align: center;
    }

    .product-card .product-info h2 {
        font-size: 18px;
        font-weight: 700;
    }

    .product-card:hover {
        background-color: #EBEBEB;
    }

    .product-card:hover img {
        transform: rotate(-10deg) scale(1.1);
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-info .view-product {
        padding: 5px 28px;
        border: 2px solid #03B0A7;
        border-radius: 80px;
        background-color: #e6f7f6;
        color: #03b0a7;
    }

    .product-image {
        padding: 2.4rem 1rem;
    }

    .product-title {
        font-size: 1.25rem;
        color: #1a1a1a;
        margin-bottom: 1rem;
    }

    .product-card:hover .view-product {
        color: white;
    }
    
    .view-product {
        display: inline-block;
        color: #2bb7a4;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease;
        margin-bottom: 1.5rem;
        padding: 5px 28px;
        border: 2px solid transparent;
    }

    .view-product:hover {
        color: #1a8f80;
    }

    .view-all-button {
        display: block;
        width: fit-content;
        margin: 0 auto;
        padding: 1rem 2rem;
        background-color: #2e2b6e;
        color: white;
        text-decoration: none;
        border-radius: 50px;
        font-weight: 500;
        transition: background-color 0.2s ease;
    }

    .view-all-button:hover {
        background-color: #1f1c4d;
    }

    .swiper-button-next,
    .swiper-button-prev {
        color: #2e2b6e;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .swiper-pagination-bullet-active {
        background: #2e2b6e;
    }

    .swiper:hover .swiper-button-next,
    .swiper:hover .swiper-button-prev {
        opacity: 1;
    }

    @media (max-width: 768px) {
        .hero h1 {
            font-size: 2rem;
        }

        .hero p {
            font-size: 1rem;
        }
    }
</style>

<div class="ipl-featured-products">
    <div class="container">
        <section class="hero flex">
            <h1>What is your pet's poop telling you?</h1>
            <p>Gut health drives 70% of immunity. Our tests check inflammation, immune response, and gut permeability to guide pet care.</p>
        </section>

        {% assign featured_collection = collections['all'] %}
        
        {% if featured_collection and featured_collection.products.size > 0 %}
        <div class="swiper">
            <div class="swiper-wrapper">
                {% for product in featured_collection.products %}
                <div class="swiper-slide">
                    <div class="product-card">
                        <img src="{{ product.featured_image | img_url: '800x' }}" alt="{{ product.title }}" class="product-image">
                        <div class="product-info">
                            <h2 class="product-title">{{ product.title }}</h2>
                            <a href="{{ product.url }}" class="view-product">View product</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
        {% else %}
            <p>No featured products available.</p>
        {% endif %}

        <a href="/collections/featured-products" class="view-all-button">View all products</a>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/9.2.0/swiper-bundle.min.js"></script>
<script>
    const swiper = new Swiper('.swiper', {
        slidesPerView: 1,
        spaceBetween: 20,
        pagination: {
            el: '.swiper-pagination',
            clickable: true
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        breakpoints: {
            640: {
                slidesPerView: 2,
            },
            1024: {
                slidesPerView: 3.2
            }
        }
    });
</script>

{% schema %}
{
  "name": "IPL featured products",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Welcome to Our Store!"
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body Text",
      "default": "This is a customizable page for displaying your content."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "IPL featured products",
      "category": "Custom"
    }
  ]
}
{% endschema %}
