<style>
  .gut-check-test-container {
      margin: 5rem auto;
  } 
  /* Header styles */
  .header {
      text-align: center;
      margin-bottom: 3rem;
  }

  .header h1 {
      font-size: 40px;
      font-weight: 700;
      margin-bottom: 1.5rem;
      color: #2d2a3a;
  }

  .header p {
      font-size: 24px;
      max-width: 1024px;
      margin: 0 auto;
      color: #4a4a4a;
  }

  /* Features grid */
  .features {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 2rem;
      margin-top: 2rem;
  }

  .feature {
      text-align: center;
      flex: 1 1 200px;
      max-width: 250px;
      display: flex;
      flex-direction: column;
      align-items: center;
  }

  .icon-container {
      {% comment %} background-color: #f2f2f2; {% endcomment %}
      width: 180px;
      height: 180px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.5rem;
  }

  .icon {
      width: 70px;
      height: 70px;
      stroke: #3a3a8c;
      fill: none;
      stroke-width: 2px;
  }

  .feature h3 {
      font-size: 18px;
      font-weight: 700;
      margin-bottom: 0.5rem;
      color: #2d2a3a;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
      .icon-container {
          width: 150px;
          height: 150px;
      }
  }

  @media (max-width: 520px) {
      .features {
          gap: 0;
          justify-content: flex-start;
      }

      .feature {
          flex: 0 0 100%;
          max-width: 100%;
          flex-direction: row;
          gap: 1rem;
      }

      .icon-container {
          width: 90px;
          height: 90px;
      }
      .icon-container svg {
        width: 60px;
        height: 60px;
      }
      .gut-check-test-container {
        margin: 1rem; 
      }
      .header h1 {
        font-size: 24px;
      }
      .header p {
        font-size: 14px;
      }
  }
</style>

<div class="gut-check-test-container">
  <div class="header">
      <h1>Take the mystery out of your pet's gut health.</h1>
      <p>If your dog or cat is showing signs of digestive or stomach issues, our Basic Gut Check test can help you proactively identify underlying issues and lead you (and your vet) to better solutions and a better quality of life!</p>
  </div>

  <div class="features">
      <div class="feature">
          <div class="icon-container">
            <img src="https://cdn.shopify.com/s/files/1/0685/6497/5842/files/diarrhea-constipation.png?v=1742304452">
          </div>
          <h3>Diarrhea or Constipation</h3>
      </div>

      <div class="feature">
          <div class="icon-container">
            <img src="https://cdn.shopify.com/s/files/1/0685/6497/5842/files/mood-behavior.png?v=1742304898">
          </div>
          <h3>Mood/Behavior</h3>
      </div>

      <div class="feature">
          <div class="icon-container">
            <img src="https://cdn.shopify.com/s/files/1/0685/6497/5842/files/parasites.png?v=1742304695">
          </div>
          <h3>Skin/Coat Issues/Itching</h3>
      </div>

      <div class="feature">
          <div class="icon-container">
            <img src="https://cdn.shopify.com/s/files/1/0685/6497/5842/files/vomiting.png?v=1742305032">    
          </div>
          <h3>Vomiting</h3>
      </div>
  </div>
</div>

{% schema %}
{
  "name": "IPL gut check test",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Welcome to Our Store!"
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body Text",
      "default": "This is a customizable page for displaying your content."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "IPL gut check test"
    }
  ]
}
{% endschema %}