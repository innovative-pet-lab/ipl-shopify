<style>
  .gut-check-test-container {
      margin: 5rem auto;
  } 
  /* Header styles */
  .header {
      text-align: center;
      margin-bottom: 3rem;
  }

  .header h1 {
      font-size: 40px;
      font-weight: 700;
      margin-bottom: 1.5rem;
      color: #2d2a3a;
  }

  .header p {
      font-size: 24px;
      max-width: 1024px;
      margin: 0 auto;
      color: #4a4a4a;
      line-height: normal;
  }

  /* Features grid */
  .features {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 2rem;
      margin-top: 2rem;
  }

  .feature {
      text-align: center;
      flex: 1 1 200px;
      max-width: 250px;
      display: flex;
      flex-direction: column;
      align-items: center;
  }

  .icon-container {
      width: 180px;
      height: 180px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.5rem;
  }

  .icon {
      width: 70px;
      height: 70px;
      stroke: #3a3a8c;
      fill: none;
      stroke-width: 2px;
  }

  .feature h3 {
      font-size: 18px;
      font-weight: 700;
      margin-bottom: 0.5rem;
      color: #2d2a3a;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
      .icon-container {
          width: 150px;
          height: 150px;
      }
  }

  @media (max-width: 520px) {
      .features {
          gap: 0;
          justify-content: flex-start;
      }

      .feature {
          flex: 0 0 100%;
          max-width: 100%;
          flex-direction: row;
          gap: 1rem;
      }

      .icon-container {
          width: 90px;
          height: 90px;
      }
      .icon-container svg {
        width: 60px;
        height: 60px;
      }
      .gut-check-test-container {
        margin: 1rem; 
      }
      .header h1 {
        font-size: 24px;
      }
      .header p {
        font-size: 14px;
      }
  }
</style>

<div class="gut-check-test-container">
  <div class="header">
    {% if section.settings.heading_text != empty %}
      <h1>{{ section.settings.heading_text }}</h1>
    {% endif %}
    {% if section.settings.subheading_text != empty %}
      {% assign take_mystery_block = product.metafields.custom.take_mystery_block %}
      {% if take_mystery_block != blank %}
        <p>{{ take_mystery_block | metafield_tag }}</p>
      {% else %}
        <p>{{ section.settings.subheading_text }}</p>
      {% endif %}
    {% endif %}
  </div>

  <div class="features">
    {% for block in section.blocks %}
      <div class="feature">
        {% if block.settings.test_icon != empty %}
          <div class="icon-container">
            <img src="{{ block.settings.test_icon | image_url }}" alt="{{ block.settings.text_item }}" width="" height="">
          </div>
        {% endif %}
          {% if block.settings.test_label != empty %}
          <h3>{{ block.settings.test_label }}</h3>
          {% endif %}
      </div>
    {% endfor %}
  </div>

</div>

{% schema %}
{
  "name": "IPL gut check",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Welcome to Our Store!"
    },
    {
      "type": "textarea",
      "id": "subheading_text",
      "label": "Subheading Text",
      "default": "This is a customizable page for displaying your content."
    }
  ],
  "blocks": [
    {
      "type": "test_item",
      "name": "Test item",
      "limit": 5,
      "settings": [
        {
          "type": "text",
          "id": "test_label",
          "label": "Test Label",
          "default": "Vomiting"
        },
        {
          "type": "image_picker",
          "id": "test_icon",
          "label": "Test icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "IPL gut check test"
    }
  ]
}
{% endschema %}