        <style>
            .ipl-our-process {
                padding-top: 5rem;
            }
            .ipl-our-process .container {
                padding-left: 8%;
                padding-right: 8%;
            }
            @media (max-width: 768px) {
                .ipl-our-process {
                    padding-top: 0;
                }
                .ipl-our-process .process-item {
                    flex-direction: row;
                }
                .process-grid {
                    margin-top: 0!important;
                }
                .ipl-our-process h1 {
                    margin-bottom: 35px;
                }
            }
            .ipl-our-process h1 {
                text-align: center;
                font-size: 48px;
                font-weight: bold;
                color: #000;
                margin-bottom: 50px;
            }   
            .process-grid {
                margin-top: 5rem;
                margin-bottom: 2rem;
                display: flex;
                flex-wrap: wrap;
                gap: 48px;
                justify-content: space-between;
            }   
            .process-grid > * {
                flex: 1 1 calc(33.33% - 32px);
            }
            .process-item {
                text-align: center;
                display: flex;
                flex-direction: column;
                align-items: center;
            }
            .process-item h3 {
                font-size: 24px;
                font-weight: 600;
            }
            .process-item p {
                font-size: 20px;
                line-height: 27.32px;
                padding: 0 12px 0 15px;
            }
            .icon-container {
                background-color: #ECF0EF;
                border-radius: 50%;
                width: 20vw;
                height: 20vw;
                display: flex;
                align-items: center;
                justify-content: center;
                margin-bottom: 54px;
            }
            .icon {
                width: 48px;
                height: 48px;
            }
            h3 {
                color: #1F2937;
                font-size: 1.25rem;
                margin-bottom: 16px;
            }
            p {
                color: #4B5563;
                font-size: 1rem;
            }
    
            @media (max-width: 768px) {
                .process-grid {
                    flex-direction: column;
                    gap: 6px;
                }
                .icon-container svg {
                    width: 46px;
                    height: 46px;
                }
                .icon-container {
                    height: 88px;
                    width: 93px;
                    margin-bottom: 1rem;
                    max-width: 93px;
                    min-width: 93px;
                }
                .process-info {
                    text-align: left;
                }
                .process-info h3 {
                    padding: 0 1px 0 15px;
                    font-size: 20px;
                }
                .process-item p {
                    font-size: 14px;
                    line-height: 19.12px;
                }
                .ipl-our-process h1 {
                    font-size: 24px;
                }
            }
            @media (max-width: 1020px) {
                .process-grid {
                    gap: 1px;
                }
            }
            @media (min-width: 769px) {
                .icon-container svg {
                    width: 100%;
                    height: 9vw;
                }
            }
            @media (min-width: 1900px) {
                .ipl-our-process .container {
                    padding-left: 12%;
                    padding-right: 12%;
                }
            }
            @media (min-width: 2400px) {
                .icon-container svg {
                    height: 5vw;
                }
                .icon-container {
                    width: 300px;
                    height: 300px;
                }
            }
        </style>

        <div class="ipl-our-process">
            <div class="container">
                {% if section.settings.heading_text %}
                <h1>{{ section.settings.heading_text }}</h1>
                {% endif %}
                <div class="process-grid">
                    {% for block in section.blocks %}
                        <div class="process-item">
                            {% if block.settings.image_icon %}
                                {% if block.settings.image_icon %}
                                    <div class="icon-container">
                                    <img src="{{ block.settings.image_icon | image_url }}" width="" height="" alt="{{ heading_text }}">
                                    </div>
                                {% endif %}
                            {% else %}
                                {% if block.settings.icon %}
                                    <div class="icon-container">
                                    {{ block.settings.icon }}
                                    </div>
                                {% endif %}
                            {% endif %}

                            <div class="process-info">
                                {% if block.settings.heading %}
                                <h3>{{ block.settings.heading }}</h3>
                                {% endif %}
                                {% if block.settings.text %}
                                <p>{{ block.settings.text }}</p>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

    {% schema %}
{
  "name": "IPL Our Process",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Our Process"
    }
  ],
  "blocks": [
    {
      "type": "our-process-icons",
      "name": "Icons",
      "limit": 3,
      "settings": [
        {
          "type": "textarea",
          "id": "icon",
          "label": "Icon"
        },
        {
            "type": "image_picker",
            "id": "image_icon",
            "label": "Image Icon"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "heading"
        },
        {
            "type": "text",
            "id": "text",
            "label": "Item text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "IPL Our Process",
      "category": "Custom"
    }
  ]
}
{% endschema %}